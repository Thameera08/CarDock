<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpenActivity2"
    android:background="@drawable/bg">


    <TextView
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_dark_background"
        android:padding="@dimen/pading"
        android:text="@string/about_string"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textColor="#F1ECEC"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/welcome"
        android:layout_below="@id/about"
        android:padding="@dimen/pading"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault"
        android:text="@string/welcome_to_cardock_string"
        android:background="@color/material_dynamic_neutral20"
        android:textColor="@color/white"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/paragraph_string"
        android:id="@+id/article"
        android:layout_below="@id/welcome"
        android:lineSpacingExtra="5dp"
        android:padding="@dimen/pading"
        android:textColor="@color/white"
        
        />

    <Button
        android:id="@+id/btnProcess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Process"
        android:layout_below="@id/article"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>